{
    "name": "thesaurus/indonesia-php",
    "description": "Aplikasi tesaurus untuk mencari sinonim dan antonim dalam bahasa Indonesia",
    "type": "project",
    "keywords": ["thesaurus", "synonym", "antonym", "indonesia", "php", "dictionary"],
    "license": "MIT",
    "authors": [
        {
            "name": "Developer",
            "email": "developer@example.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Thesaurus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thesaurus\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "install-db": "php install.php",
        "serve": "php -S localhost:8000 -t public/",
        "check-syntax": "find src/ -name '*.php' -exec php -l {} \\;"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
